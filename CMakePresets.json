{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26
  },
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "$env{MINGW_ROOT}/bin/gcc.exe",
        "CMAKE_CXX_COMPILER": "$env{MINGW_ROOT}/bin/g++.exe",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_PREFIX_PATH": "${sourceDir}/External/vcpkg_installed/x64-mingw-static",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_C_STANDARD": "23",
        "CMAKE_C_STANDARD_REQUIRED": "YES",
        "CMAKE_C_EXTENSIONS": "NO",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_STANDARD_REQUIRED": "YES",
        "CMAKE_CXX_EXTENSIONS": "YES"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "configurePreset": "base",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "displayName": "Release",
      "configurePreset": "base",
      "configuration": "Release"
    }
  ]
}